<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.md2k.mcerebrum_chfscheduler">

    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/app_theme_teal_light"
        tools:replace="android:theme">
        <activity
            android:name="org.md2k.chfscheduler.ActivityMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.md2k.chfscheduler.ActivityShowList"
            android:enabled="true"
            android:exported="true"
            android:label="CHF Protocol"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="org.md2k.mcerebrum_chfscheduler.ActivityList" />
            </intent-filter>
            >
        </activity>
        <activity
            android:name="org.md2k.utilities.permission.ActivityPermission"
            android:enabled="true"
            android:exported="true"
            android:label="Permission"
            android:screenOrientation="portrait" />

        <service
            android:name="org.md2k.chfscheduler.ServiceChfScheduler"
            android:enabled="true"
            android:exported="true" />

    </application>

</manifest>
